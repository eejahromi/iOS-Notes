// in info.plist
UIApplicationShortcutItems Array
UIApplicationShortcutItemSubtitle
UIApplicationShortcutItemType // unique identifier
UIApplicationShortcutItemTitle
UIApplicationShortcutItemIconType // pre-existing icons
