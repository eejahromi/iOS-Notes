// GlobalAlertView

static UIWindow *_sharedAlertView = nil;
+ (UIWindow *)sharedAlertView
{
    static dispatch_once_t onceToken;
    dispatch_once(&onceToken, ^{
        _sharedNavigationBarAlertView = [[UIWindow alloc] initWithFrame:CGRectZero];
        _sharedNavigationBarAlertView.windowLevel = UIWindowLevelStatusBar + 1.0;
        _sharedNavigationBarAlertView.hidden = YES;
        _sharedNavigationBarAlertView.backgroundColor = [UIColor purpleColor];
    });
    return _sharedAlertView;
}

+ (void)showWithCompletion:(void(^)(BOOL))completion
{
    CGRect frame = [UIScreen mainScreen].bounds;
    frame.size.height = 64.0;
    [self sharedAlertView].frame = frame;
    [self sharedAlertView].hidden = NO;
    UILabel *label = [[UILabel alloc] initWithFrame:frame];
    label.textColor = [UIColor whiteColor];
    label.textAlignment = NSTextAlignmentCenter;
    label.text = @"This is an Alert!";
    [_sharedAlertView addSubview:label];
    
    dispatch_after(dispatch_time(DISPATCH_TIME_NOW, (int64_t)(3.0 * NSEC_PER_SEC)), dispatch_get_main_queue(), ^{
        [self hide];
    });
    //completion(YES);
    
}
+ (void)hide
{
    [self sharedAlertView].hidden = YES;
}
